<h1> Create a New Tournament </h1> <br>

<% if @tournament.errors.any? %>
    <div id="error_explanation">
    <h2>
        <%= pluralize(@tournament.errors.count, "error") %>
        prohibited this tournament from being created:
    </h2>
    
    <ul>
    <% @tournament.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
<% end %>

<%= form_for @tournament do |f| %>

    <%= f.label :event_name %>
    <%= f.text_field :event_name %>
    <br>
    <%= f.label :event_date %>
    <%= f.text_field :event_date %>
    <br>
    <%= f.label :info %>
    <%= f.text_field :info %>
    <br>
    <%= f.hidden_field :finished, :value => false %>
    
    <%= f.submit "Create Tournament" %> <%= link_to "Back", admin_path(current_user) %>
<% end %>
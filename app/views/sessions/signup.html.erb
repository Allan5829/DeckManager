<h1> Signup as a new User </h1> <br>

<%= form_for :user, url: '/user/signup' do |f| %>

    <% if @user.errors.any? %>
        <div id="error_explanation">
        <h2>
            <%= pluralize(@user.errors.count, "error") %>
            prohibited this user from signing up:
        </h2>
    
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
        </div>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <br>
    
    <%= f.submit "Sign Up" %>
<% end %>
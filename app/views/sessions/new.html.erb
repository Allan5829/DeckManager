<h1> Signup as a new User </h1> <br>

<%= form_for :user, url: '/users' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <br>
    
    <%= f.submit "Create User" %>
<% end %>
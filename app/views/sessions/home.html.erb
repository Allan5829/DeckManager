<% if current_user %>

    <% if current_user.admin == true %>
        Hello Admin: <%= current_user.name %> <br>
        <%= link_to "Admin Page", admin_path(current_user) %> 
    <% elsif current_user.admin == false %>
        Hello <%= current_user.name %> <br>
        <%= link_to "Profile Page", user_path(current_user) %>
    <% end %>

    <%= link_to "Log Out", logout_path %> <br>

<% else %>

    <%= link_to "Sign Up", signup_path %> <br>
    <%= link_to "Login", login_path %> <br>

<% end %>

<%= link_to "View all public decks", decks_path %> <br>
<%= link_to "View all tournaments", tournaments_path %> <br>
<%= link_to "Profile Page", user_path(current_user) %> 
<%= link_to "View all public decks.", decks_path %> <br>

<h2> <%= @deck.title %> </h2>
<%= @deck.description %> <br>
Created by: <%= @deck.player_name %> <br>

    <% if @deck.shared = true %>
        This deck is public. <br>
    <% else %>
        This deck is private. <br>
    <% end %>

    <% if @deck.users.find_by(id: current_user.id) %>
        <%= link_to "Edit this deck?", edit_deck_path(@deck) %> <br> 
    <% end %>

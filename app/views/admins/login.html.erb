<h1> Admin Login </h1> <br>

<%= form_for :user, url: '/admin/login' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <br>
    
    <%= f.submit "Login" %> <%= link_to "Home Page", root_path %>
<% end %>
